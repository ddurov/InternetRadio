<resources>
    <style name="Theme.InternetRadio" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/defaultColor</item>
        <item name="colorPrimaryDark">@color/littleShadowyColor</item>
        <item name="colorAccent">@color/overShadowyColor</item>
        <item name="android:navigationBarColor">#BCE6F5</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Theme.InternetRadio.Starting" parent="Theme.SplashScreen">\
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="windowSplashScreenBackground">@color/defaultColor</item>
        <item name="postSplashScreenTheme">@style/Theme.InternetRadio</item>
    </style>
</resources>